{
  "version": "0.2.0",
  "configurations": [
      {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "program": "${workspaceFolder}/backend/API/bin/Debug/net5.0/API.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/backend/API/bin/Debug/net5.0/API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core Docker Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "backend"],
        "debuggerPath": "/root/vsdbg/vsdbg",
        "pipeCwd": "${workspaceRoot}/backend",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "/app": "${workspaceRoot}/backend"
      }
    }
  ]
}
