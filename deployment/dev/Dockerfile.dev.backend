FROM mcr.microsoft.com/dotnet/sdk:5.0
ENV ASPNETCORE_ENVIRONMENT=development
ENV DOTNET_ENVIRONMENT=development

#install debugger for NET Core
RUN apt-get update
RUN apt-get install -y unzip
RUN curl -sSL https://aka.ms/getvsdbgsh | /bin/sh /dev/stdin -v latest -l ~/vsdbg

#install dotnet-ef to make migrations
RUN dotnet tool install --global dotnet-ef --version 5.0
ENV PATH $PATH:/root/.dotnet/tools
WORKDIR /app
# Copy csproj and restore as distinct layers
COPY backend/backend.sln ./

COPY backend/API ./API
COPY backend/Application ./Application
COPY backend/Domain ./Domain
COPY backend/Persistence ./Persistence
COPY data ./data


RUN dotnet restore
WORKDIR /app/API

# ENTRYPOINT ["dotnet", "watch", "run", "environment=development"]