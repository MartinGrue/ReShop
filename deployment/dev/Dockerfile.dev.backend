FROM mcr.microsoft.com/dotnet/sdk:5.0
ENV ASPNETCORE_ENVIRONMENT=development
ENV DOTNET_ENVIRONMENT=development

#install debugger for NET Core
RUN apt-get update
RUN apt-get install -y unzip
RUN curl -sSL https://aka.ms/getvsdbgsh | /bin/sh /dev/stdin -v latest -l ~/vsdbg

#install dotnet-ef to make migrations
RUN dotnet tool install --global dotnet-ef --version 5.0
ENV PATH $PATH:/root/.dotnet/tools
WORKDIR /app

ENV USER=docker
ENV UID=1000
ENV GID=1000
# default password for user
ENV PW=docker
RUN useradd -m ${USER} --uid=${UID} && echo "${USER}:${PW}" | chpasswd
USER ${UID}:${GID}

# Copy csproj and restore as distinct layers
COPY --chown=docker backend/backend.sln ./

COPY --chown=docker backend/API ./API
COPY --chown=docker backend/Application ./Application
COPY --chown=docker backend/Domain ./Domain
COPY --chown=docker backend/Persistence ./Persistence
COPY --chown=docker data ./data


RUN dotnet restore
WORKDIR /app/API

